{
  "name": "meticulous-display",
  "version": "1.0.0",
  "description": "Real-time espresso extraction display and shot history for Meticulous machines",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "tsx watch src/server/index.ts",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "node esbuild.config.js",
    "start": "node dist/server/index.js",
    "setup-pi": "bash scripts/setup-pi.sh"
  },
  "dependencies": {
    "@meticulous-home/espresso-api": "^0.10.8",
    "better-sqlite3": "^9.4.3",
    "compression": "^1.7.4",
    "express": "^4.18.2",
    "htm": "^3.1.1",
    "preact": "^10.28.2",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "esbuild": "^0.20.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
